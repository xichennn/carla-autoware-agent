<launch>
  <!--
    ###################
    ## Configuration ##
    ###################
  -->
  <arg name='host' default='localhost'/>
  <arg name='port' default='2000'/>
  <arg name='town' default='Town01'/>
  <arg name='role_name1' default='hero1'/>
  <arg name='role_name2' default='hero2'/>
  <arg name='spawn_point1' default='111.42,129.419,0.0,0.0,360.0,180.025'/>
  <arg name='spawn_point2' default='92.38,117.15,0,0,360,269.99'/>

  <arg name='agent' default='agent'/>


  <arg name='sensor_definition_file' default='$(find carla_autoware_agent)/$(arg agent)/config/sensors.json'/>

  <!-- vehicle info -->
  <arg name='vehicle_model' default='vehicle.toyota.prius'/>
  <arg name='vehicle_length' default='4.54'/>
  <arg name='vehicle_width' default='2.00'/>
  <arg name='vehicle_wheelbase' default='2.7'/>

  <arg name='use_ground_truth_localization' default='true'/>
  <arg name='use_ground_truth_detections' default='true'/>
  <arg name='use_manual_control' default='false'/>
  
  <!--
    ##empty world##
  -->
  <include file='$(find carla_autoware_agent)/launch/multi-agents/empty_world.launch'>
    <arg name='host' value='$(arg host)'/>
    <arg name='port' value='$(arg port)'/>
    <arg name='town' value='$(arg town)'/>
  </include>

  <!-- ### load map ### -->
  <include file='$(find carla_autoware_agent)/launch/multi-agents/my_map.launch'>
    <arg name='town' value='$(arg town)'/>
  </include>

  <!--
    ##spawn ego vehicles##
  -->
  <include file='$(find carla_autoware_agent)/launch/multi-agents/one_car.launch'>
    <arg name='host' value='$(arg host)'/>
    <arg name='port' value='$(arg port)'/>
    <arg name='vehicle_filter' value='$(arg vehicle_model)'/>
    <arg name='role_name' value='$(arg role_name1)'/>
    <arg name='spawn_point' value='$(arg spawn_point1)'/>
    <arg name='sensor_definition_file' value='$(arg sensor_definition_file)'/>
  </include>

  <include file='$(find carla_autoware_agent)/launch/multi-agents/one_car.launch'>
    <arg name='host' value='$(arg host)'/>
    <arg name='port' value='$(arg port)'/>
    <arg name='vehicle_filter' value='$(arg vehicle_model)'/>
    <arg name='role_name' value='$(arg role_name2)'/>
    <arg name='spawn_point' value='$(arg spawn_point2)'/>
    <arg name='sensor_definition_file' value='$(arg sensor_definition_file)'/>
  </include>

  <!--
    #################################################
    ## Agent bridge and agent for each ego_vehicle ##
    #################################################
  -->
  <group ns='$(arg role_name1)'>

  <include file='$(find carla_autoware_agent)/launch/multi-agents/agent_bridge.launch'>
    <arg name='role_name' value='$(arg role_name1)'/>
    <arg name='wheelbase' value='$(arg vehicle_wheelbase)'/>
  </include>

  <include file='$(find carla_autoware_agent)/launch/multi-agents/autoware_agent.launch'>
    <arg name='role_name' value='$(arg role_name1)'/>
  </include>

  </group>
  <?ignore
  <group ns='$(arg role_name2)'>

  <include file='$(find carla_autoware_agent)/launch/multi-agents/agent_bridge.launch'>
    <arg name='role_name' value='$(arg role_name2)'/>
    <arg name='wheelbase' value='$(arg vehicle_wheelbase)'/>
  </include>

  <include file='$(find carla_autoware_agent)/launch/multi-agents/autoware_agent.launch'>
    <arg name='role_name' value='$(arg role_name2)'/>
    <arg name='use_ground_truth_localization' value='$(arg use_ground_truth_localization)'/>
    <arg name='use_ground_truth_detections' value='$(arg use_ground_truth_detections)'/>
    <arg name='use_manual_control' value='$(arg use_manual_control)'/>

  </include>

  </group>
  ?>

</launch>

